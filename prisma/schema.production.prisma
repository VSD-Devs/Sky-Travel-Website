generator client {
  provider = "prisma-client-js"
  // Removed previewFeatures to increase compatibility
}

datasource db {
  provider = "sqlite"
  url      = "file:./prod.db"
}

// Model for storing contact form enquiries
model Enquiry {
  id              String     @id @default(uuid())
  firstName       String
  lastName        String
  email           String
  phone           String?
  message         String
  type            String     @default("GENERAL")
  flightDetails   String?
  holidayDetails  String?
  packageDetails  String?
  status          String     @default("NEW") // Changed to String for better compatibility
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}

// Status of enquiries - moved to String in the model for compatibility
